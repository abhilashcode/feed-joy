extends layout

block content
	.container
		form(method='post',action='contact/send')
			h1 Contact Us
			.row
				.col-lg-6
					.form-group
						label Name
						input.form-control(type='text',placeholder='Enter your Name',name='name')
					.form-group
						label Email
						input.form-control(type='text',placeholder='Enter your Email',name='email')
					.form-group
						label Message
						textarea.form-control(rows=4,placeholder='Enter your Message',name='message')
					button.btn.btn-primary(type='submit')	Submit

		
		